<%= title l(:label_product_edit) %>

<%= labelled_form_for @product, :url => product_path(@product),
                             :html => {:id => 'product-form', :multipart => true} do |f| %>
  <%= error_messages_for 'product' %>
  <%= back_url_hidden_field_tag %>
  <div class="box tabular">
    <div id="all_attributes">
    <%= render :partial => 'products/form', :locals => {:f => f} %>
    </div>
  </div>

  <%= submit_tag l(:button_save) %>
  <%= cancel_button_tag(project_products_path(@project)) %>  
<% end %>